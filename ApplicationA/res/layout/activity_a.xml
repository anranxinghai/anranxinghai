<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anranxinghai.applicationa.activities.AActivity" >

    <EditText
        android:id="@+id/text_num_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/number"
        android:inputType="phone" />

    <Button
        android:id="@+id/button_create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/button_create" />

    <Button
        android:id="@+id/button_intent_to_app_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/button_intent_to_app_b" />
    <Button
        android:id="@+id/button_broadcast_to_app_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/button_broadcast_to_app_b" />

</LinearLayout>