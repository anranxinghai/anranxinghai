<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e1e1e1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/feature1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px"
            android:background="@drawable/feature_1" 
            android:paddingLeft="140px"
            android:paddingRight="74px"
            android:gravity="center_vertical"
            android:textSize="20px"/>

        <TextView
            android:id="@+id/feature2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/feature_2"
            android:paddingLeft="140px"
            android:paddingRight="74px"
            android:gravity="center_vertical"
            android:textSize="20px" />

        <TextView
            android:id="@+id/feature3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/feature_3" 
            android:paddingLeft="140px"
            android:paddingRight="74px"
            android:gravity="center_vertical"
            android:textSize="20px"/>

    </LinearLayout>

</LinearLayout>