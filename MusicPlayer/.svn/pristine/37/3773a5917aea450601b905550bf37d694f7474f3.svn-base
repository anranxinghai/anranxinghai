<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" >

     <com.anranxinghai.musicplayer.ui.LyricView 
        android:id="@+id/text_lyric"
        android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_weight="1"
        />
     
     
    <TextView 
        android:id="@+id/text_show_name_lyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>
    <LinearLayout
        android:id="@+id/linerlayout_play_process_lyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/text_current_time_lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="@string/initial_time"/>
        <SeekBar 
            android:id="@+id/seek_play_seek_bar_lyric"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView 
            android:id="@+id/text_total_time_lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/initial_time"/>
        
    </LinearLayout>

    <LinearLayout 
        android:id="@+id/linearlayout_play_status_lyric"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageButton 
            android:id="@+id/btn_previous_lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playPrevious"
            android:src="@drawable/ic_media_previous"/>
        <ImageButton 
            android:id="@+id/btn_play_lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playOrPause"
            android:src="@drawable/ic_media_play"/>
        <ImageButton 
            android:id="@+id/btn_next_lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="playNext"
            android:src="@drawable/ic_media_next"/>
    </LinearLayout>

</LinearLayout>
