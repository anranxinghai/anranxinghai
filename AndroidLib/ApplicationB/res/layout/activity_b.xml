<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anranxinghai.applicationb.activities.BActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/list_userinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical" >

        <Button
            android:id="@+id/button_content_provider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_content_provider" />

        <Button
            android:id="@+id/button_aidl_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/button_aidl_service" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <EditText 
               android:id="@+id/text_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/hint_insert"
                android:inputType="phone"
                android:layout_weight="0.5" />
            <Button
                android:id="@+id/button_insert"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_insert_content_provider"
                android:layout_weight="0.5" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>